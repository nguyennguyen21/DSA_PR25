<style>
    body {
      overflow-x: hidden;
    }
    :root {
      --primary: #000000;
      --secondary: #FFFFFF;
      --accent: #9112BC;
      --shadow: 8px 8px 0px var(--primary);
    }
    
    #sidebar {
      min-width: 250px;
      max-width: 250px;
      background: #343a40;
      color: white;
      transition: all 0.3s;
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 1040;
    }

    #sidebar.collapsed {
      margin-left: -250px;
    }

    #sidebar .nav-link {
      color: #adb5bd;
      font-weight: 500;
    }
    .float-left{
      float: left;
    }

    #sidebar .nav-link:hover {
      color: white;
      background: rgba(255,255,255,0.1);
    }

    /* Nội dung chính — PHẢI CÓ THẺ NÀY */
    #content {
      margin-left: 250px;
      padding: 20px;
      transition: margin 0.3s;
    }

    #content.sidebar-collapsed {
      margin-left: 0;
    }

    /* Nút toggle */
    #toggleSidebar {
      position: fixed;
      top: 15px;
      left: 15px;
      z-index: 1050;
      background: var(--accent);
      color: white;
      border: none;
      box-shadow: var(--shadow);
      border: 1px solid var(--primary);
      padding: 8px 12px;
      font-size: 18px;
      cursor: pointer;
    }

    /* Responsive: Ẩn sidebar trên mobile */
    @@media (max-width: 768px) {
      #sidebar {
        margin-left: -250px;
      }
      #sidebar.active {
        margin-left: 0;
      }
      #content {
        margin-left: 0;
      }
      #content.sidebar-mobile-open {
        margin-left: 250px;
      }
    }</style>
  
<!-- Nút toggle sidebar -->
  <button id="toggleSidebar" class="btn">
    ☰ 
  </button>

  <!-- Sidebar -->
  <div id="sidebar" class="sidebar">
    <div class="p-3">
      <h4 class="text-white float-left">Menu</h4>
      <hr class="text-white-50">
    </div>
    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link" href="/Admin/Dashboard"><i class="bi bi-house-door-fill"></i> Dash Board</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/Admin/Statistics/Statistics"><i class="bi bi-bar-chart-fill"></i> Thống kê</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/Admin/Questions/index"><i class="fas fa-users me-2"></i>câu hỏi điền khuyết</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/Admin/Questions/MQC/SeenMCQ"><i class="fas fa-cog me-2"></i> câu hỏi Trắc nghiệmt</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#"><i class="fas fa-sign-out-alt me-2"></i> Đăng xuất</a>
      </li>
    </ul>
  </div>

  <!-- ✅ QUAN TRỌNG: Bao nội dung trang trong #content -->
  

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const sidebar = document.getElementById('sidebar');
      const content = document.getElementById('content');
      const toggleBtn = document.getElementById('toggleSidebar');

      if (!sidebar || !content || !toggleBtn) return;

      toggleBtn.addEventListener('click', function () {
        const isMobile = window.innerWidth <= 768;

        if (isMobile) {
          sidebar.classList.toggle('active');
          content.classList.toggle('sidebar-mobile-open');
        } else {
          sidebar.classList.toggle('collapsed');
          content.classList.toggle('sidebar-collapsed');
        }
      });

      // Đóng sidebar khi click ra ngoài (chỉ trên mobile)
      document.addEventListener('click', function (e) {
        if (window.innerWidth <= 768 && sidebar.classList.contains('active')) {
          if (!sidebar.contains(e.target) && e.target !== toggleBtn) {
            sidebar.classList.remove('active');
            content.classList.remove('sidebar-mobile-open');
          }
        }
      });
    });
  </script>